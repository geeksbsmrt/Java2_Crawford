<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.adamcrawford.multipleactivities.toon.ToonDetail">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/detailToonName"
        android:gravity="center"
        android:text="@string/toonName"
        />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/detailToonName"
        android:id="@+id/toonRating"
        android:numStars="5"
        android:stepSize="1"
        android:rating="0"
        />

    <ImageView
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/blankprofilepic"
        android:id="@+id/detailToonImg"
        android:contentDescription="@string/toonImg"
        android:layout_below="@+id/toonRating"
        android:visibility="gone"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toonLevelLable"
        android:layout_below="@+id/detailToonImg"
        android:text="@string/levelLable"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detailToonImg"
        android:layout_alignParentRight="true"
        android:text="@string/toonLevel"
        android:id="@+id/detailToonLevel"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toonLevelLable"
        android:text="@string/classLable"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detailToonLevel"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:text="@string/toonClass"
        android:id="@+id/detailToonClass"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

</RelativeLayout>
