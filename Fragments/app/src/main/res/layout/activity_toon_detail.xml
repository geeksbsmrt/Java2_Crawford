<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.adamcrawford.fragments.toon.ToonDetail">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/detailToonName"
        android:gravity="center"
        android:text="@string/toonName"
        />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/detailToonName"
        android:id="@+id/toonRating"
        android:numStars="5"
        android:stepSize="1"
        android:rating="0"
        />

    <ImageView
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/blankprofilepic"
        android:id="@+id/detailToonImg"
        android:contentDescription="@string/toonImg"
        android:layout_below="@+id/toonRating"
        android:visibility="gone"
        />
    <com.adamcrawford.fragments.data.image.SmartImageView
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/blankprofilepic"
        android:id="@+id/smartToonImg"
        android:contentDescription="@string/toonImg"
        android:layout_below="@+id/toonRating"
        android:visibility="gone"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toonLevelLabel"
        android:layout_below="@+id/smartToonImg"
        android:text="@string/levelLabel"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/smartToonImg"
        android:layout_alignParentRight="true"
        android:text="@string/toonLevel"
        android:id="@+id/detailToonLevel"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toonLevelLabel"
        android:text="@string/raceLabel"
        android:id="@+id/toonRaceLabel"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detailToonLevel"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:text="@string/toonRace"
        android:id="@+id/detailToonRace"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toonRaceLabel"
        android:text="@string/classLabel"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="5dp"
        android:id="@+id/toonClassLable"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detailToonRace"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:text="@string/toonClass"
        android:id="@+id/detailToonClass"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toonClassLable"
        android:text="@string/roleLabel"
        android:id="@+id/toonRoleLabel"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detailToonClass"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:text="@string/toonRole"
        android:id="@+id/detailToonRole"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toonRoleLabel"
        android:text="@string/specLabel"
        android:id="@+id/toonSpecLabel"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detailToonRole"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:text="@string/toonSpec"
        android:id="@+id/detailToonSpec"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detailToonSpec"
        android:layout_centerHorizontal="true"
        android:id="@+id/getWebInfo"
        android:text="@string/getWebInfo"
        android:layout_marginTop="5dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getWebInfo"
        android:layout_centerHorizontal="true"
        android:id="@+id/shareToon"
        android:text="@string/share"
        android:layout_marginTop="5dp"
        />

</RelativeLayout>
</ScrollView>